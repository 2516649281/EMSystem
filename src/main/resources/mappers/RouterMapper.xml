<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chunfeng.dao.mapper.RouterMapper">
    <!--条件查询路由信息-->
    <select id="selectAllRouter" resultType="com.chunfeng.dao.entity.Router">
        select id, name,value,method,type,is_default
        from router
        <where>
            <if test="id!='' and id!=null">
                id=#{id}
            </if>
            <if test="name!='' and name!=null">
                and name like CONCAT('%', #{name}, '%')
            </if>
            <if test="method!='' and method!=null">
                and method =#{method}
            </if>
            <if test="value!='' and value!=null">
                and value=#{value}
            </if>
            <if test="type!='' and type!=null">
                and type=#{type}
            </if>
            <if test="isDefault!=null">
                and is_default=#{isDefault}
            </if>
        </where>
        ;
    </select>
    <!--根据ID查询路由-->
    <select id="selectAllRouterById" resultType="com.chunfeng.dao.entity.Router">
        select id, name,value,method,type
        from router
        <where>
            id in
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
        ;
    </select>
    <!--插入一条路由信息-->
    <insert id="insertRouter">
        insert into router (id, name, value, method, type, create_user, create_time)
        values (#{id}, #{name}, #{value}, #{method}, #{type}, #{createUser}, #{createTime});
    </insert>
    <!--修改一条路由信息-->
    <update id="updateRouterById">
        update router
        <set>
            <if test="name!='' and name!=null">
                name=#{name}
            </if>
            <if test="value!='' and value!=null">
                ,value=#{value}
            </if>
            <if test="method!='' and method!=null">
                ,method=#{method}
            </if>
            <if test="type!='' and type!=null">
                ,type=#{type}
            </if>
            <if test="isDefault!=null">
                ,is_default=#{isDefault}
            </if>
            <if test="updateUser!='' and updateUser!=null">
                ,update_user=#{updateUser}
            </if>
            <if test="updateTime!='' and updateTime!=null">
                ,update_time=#{updateTime}
            </if>
        </set>
        where id=#{id};
    </update>
    <!--根据路由ID批量删除路由信息-->
    <delete id="deleteRouterById" parameterType="list">
        delete
        from router
        where
        id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>