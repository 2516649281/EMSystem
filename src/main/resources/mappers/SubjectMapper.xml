<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chunfeng.dao.mapper.SubjectMapper">
    <!--字段映射-->
    <resultMap id="subjectMap" type="com.chunfeng.dao.entity.Subject">
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <!--条件查询科目-->
    <select id="selectAllSubject" resultType="com.chunfeng.dao.entity.Subject"
            parameterType="com.chunfeng.dao.entity.Subject"
            resultMap="subjectMap">
        select
        id, name
        from subject
        <where>
            <if test="id!='' and id!=null">
                and id=#{id}
            </if>
            <if test="name!='' and name!=null">
                and name like CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>
    <!--根据ID查询科目-->
    <select id="selectAllSubjectById" resultType="list" resultMap="subjectMap">
        select id, name
        from subject
        <where>
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
        ;
    </select>
    <!--插入一条科目数据-->
    <insert id="insertSubject">
        insert into subject (id, name, create_user, create_time)
        values (#{id}, #{name}, #{createUser}, #{createTime});
    </insert>
    <!--根据科目ID修改一条科目数据-->
    <update id="updateSubjectById">
        update subject
        <set>
            <if test="name!='' and password!=null">
                name=#{name}
            </if>
            <if test="updateUser!='' and updateUser!=null">
                ,update_user=#{updateUser}
            </if>
            <if test="updateTime!='' and updateTime!=null">
                ,update_time=#{updateTime}
            </if>
        </set>
        where id=#{id};
    </update>
    <!--根据科目ID批量删除科目信息-->
    <delete id="deleteSubjectById" parameterType="list">
        delete
        from subject
        where
        id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>